<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MZPermission" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MZPermission.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MZPermission.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MZPermission.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--পটভূমির রঙ এবং স্বচ্ছতা-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--শিরোনাম অপসারণ করতে হবে কিনা -->
        <item name="android:windowNoTitle">true</item>
        <!--সীমান্ত অপসারণ করতে হবে কিনা-->
        <item name="android:windowFrame">@null</item>
        <!--কার্যকলাপের উপরে ভাসতে হবে কিনা-->
        <item name="android:windowIsFloating">true</item>
        <!--এটা কি অস্পষ্ট-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>